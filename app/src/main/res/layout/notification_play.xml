<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_320"
    android:layout_height="@dimen/dp_160"
    android:background="@android:color/holo_blue_bright">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:src="@mipmap/icon" />

    <TextView
        android:id="@+id/tv_not_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_9"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_not_voice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_below="@id/tv_not_app_name"
        android:layout_marginStart="@dimen/dp_16"
        android:textSize="@dimen/sp_16"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="剑来-道观道" />

    <TextView
        android:id="@+id/tv_not_reduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-15s"
        android:layout_below="@id/tv_not_voice_name"
        android:layout_marginStart="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_27"/>

    <ImageView
        android:id="@+id/iv_not_play_up"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:src="@drawable/ic_play_up"
        android:layout_below="@id/tv_not_voice_name"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_toEndOf="@id/tv_not_reduce"
        android:layout_marginStart="@dimen/dp_22"/>

    <ImageView
        android:id="@+id/iv_not_play_start"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@drawable/ic_play_start"
        android:layout_below="@id/tv_not_voice_name"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_toEndOf="@id/iv_not_play_up"
        android:layout_marginStart="@dimen/dp_22"/>

    <ImageView
        android:id="@+id/iv_not_play_down"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:src="@drawable/ic_play_down"
        android:layout_below="@id/tv_not_voice_name"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_toEndOf="@id/iv_not_play_start"
        android:layout_marginStart="@dimen/dp_22"/>

    <TextView
        android:id="@+id/tv_not_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+15s"
        android:layout_below="@id/tv_not_voice_name"
        android:layout_toEndOf="@+id/iv_not_play_down"
        android:layout_marginStart="@dimen/sp_22"
        android:layout_marginTop="@dimen/dp_27"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_below="@id/iv_not_play_start"
        android:layout_marginTop="@dimen/dp_20"
        android:progress="25"
        style="@android:style/Widget.ProgressBar.Horizontal"/>


</RelativeLayout>